@model DeductionCalculatorV2.Models.AddDependentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@**@
@using (Html.BeginForm("AddDependent", "Person", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Add a dependent</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Dependent.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Dependent.FirstName, new {@class = "form-control"})
        </div>

        @Html.LabelFor(m => m.Dependent.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Dependent.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.HiddenFor(m => m.EmployeeId)
            <input type="submit" class="btn btn-default" value="Submit"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
